private: System::Void button6_Click(System::Object^  sender, System::EventArgs^  e) {
	 if (rz == 0)
            {
                god++;
                label1.Text = god + ":" + mec + ":" + day + ":" + h + ":" + m + ":" + s;
                label3.Text = "-_-_-_-_-_-";
            }else
            {
                god2++;
                label2.Text = god2 + ":" + mec2 + ":" + day2 + ":" + h2 + ":" + m2 + ":" + s2;
                label3.Text = "-_-_-_-_-_-";
            }
		 }
private: System::Void button7_Click(System::Object^  sender, System::EventArgs^  e) {
	 s = 0; m = 0; h = 0; day = 0; mec = 0; god = 0;
            s2 = 0; m2 = 0; h2 = 0; day2 = 0; mec2 = 0; god2 = 0;
            label1.Text = god + ":" + mec + ":" + day + ":" + h + ":" + m + ":" + s;
            label2.Text = god2 + ":" + mec2 + ":" + day2 + ":" + h2 + ":" + m2 + ":" + s2;
            label3.Text = "-_-_-_-_-_-";
		 }
private: System::Void button8_Click(System::Object^  sender, System::EventArgs^  e) {
	 if (rz == 1)
            {
                god3 = god + god2;
                mec3 = mec + mec2;
                day3 = day + day2;
                h3 = h + h2;
                m3 = m + m2;
                s3 = s + s2;

                while (s3 > 60) { s3 -= 60; m3++; }
                while (m3 > 60) { m3 -= 60; h3++; }
                while (h3 > 24) { h3 -= 24; day3++; }
                while (day3 > 30) { day3 -= 30; mec3++; }
                while (mec3 > 12) { mec3 -= 12; god3++; }
               
                label3.Text = god3 + ":" + mec3 + ":" + day3 + ":" + h3 + ":" + m3 + ":" + s3;
                rz = 0;
            }
            if (rz == 2)
            {
                god3 = god - god2;
                mec3 = mec - mec2;
                day3 = day - day2;
                h3 = h - h2;
                m3 = m - m2;
                s3 = s - s2;

               
    
                while (god3 < 0) {  god3 = 0;  }
                while (mec3 < 0) { mec3 += 12; god3--; }
                while (day3 < 0) { day3 += 30; mec3--; }
                while (h3 < 0) { h3 += 24; day3--; }
                while (m3 < 0) { m3 += 60; h3--; }
                while (s3 < 0) { s3 += 60; m3--; }
                label3.Text = god3 + ":" + mec3 + ":" + day3 + ":" + h3 + ":" + m3 + ":" + s3;
                rz = 0;
            }
            if (rz == 3)
            {
                god3 = god * god2;
                mec3 = mec * mec2;
                day3 = day * day2;
                h3 = h * h2;
                m3 = m * m2;
                s3 = s * s2;

                while (s3 > 60) { s3 -= 60; m3++; }
                while (m3 > 60) { m3 -= 60; h3++; }
                while (h3 > 24) { h3 -= 24; day3++; }
                while (day3 > 30) { day3 -= 30; mec3++; }
                while (mec3 > 12) { mec3 -= 12; god3++; }

                label3.Text = god3 + ":" + mec3 + ":" + day3 + ":" + h3 + ":" + m3 + ":" + s3;
                rz = 0;
            }
            god3 = 0;
            mec3 = 0;
            day3 = 0;
            h3 = 0;
            m3 = 0;
            s3 = 0;
            //----
            god2 = 0;
            mec2 = 0;
            day2 = 0;
            h2 = 0;
            m2 = 0;
            s2 = 0;
            //-----
            god = 0;
            mec = 0;
            day = 0;
            h = 0;
            m = 0;
            s = 0;
		 }
private: System::Void button9_Click(System::Object^  sender, System::EventArgs^  e) {
	    rz = 1;
		 }
private: System::Void button10_Click(System::Object^  sender, System::EventArgs^  e) {
	 rz = 2;
		 }
